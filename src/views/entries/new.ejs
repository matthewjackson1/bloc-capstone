<h2>Enter Competition</h2>
<form action="/competitions/<%= competition.id %>/entries/create" method="post">
    <div class="form-group">
        <div class="form-group">
            <label for="title">Your title</label>
            <input type="text" class="form-control" name="title" aria-describedby="titleHelp">
        </div>
        <div class="form-group">
            <label for="body">Your entry</label>
            <textarea  class="form-control" name="body" aria-describedby="bodyHelp"></textarea>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Submit entry</button>
</form>